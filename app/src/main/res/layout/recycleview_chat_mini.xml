<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/chatIcon"
        android:layout_width="200px"
        android:layout_height="200px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/chatName"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginStart="210px"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/chatIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chatLastMes"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginStart="210px"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/chatIcon"
        app:layout_constraintTop_toBottomOf="@+id/chatName" />

    <TextView
        android:id="@+id/chatUnchecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="125px"
        android:layout_marginEnd="25px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>